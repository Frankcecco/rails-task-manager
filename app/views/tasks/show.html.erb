<div class="container">
  <h1><%= @task.title %></h1>
  <p><%= @task.details %></p>
  <form>
    <input type="checkbox">
    <label for="checkbox"><%= @task.completed ? "This Task is completed" : "This Task is not completed" %></label>
    <% link_to "Delete", data: {turbo_method: :delete, turbo_confirm: "Are you sure"} %>
  </form>
  <%= link_to "Back to list", tasks_path %>
</div>
